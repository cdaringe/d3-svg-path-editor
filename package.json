{
  "name": "d3-svg-path-editor",
  "version": "0.0.0-semantic-release",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@types/blue-tape": "^0.1.33",
    "@types/d3": "^5.7.2",
    "@types/lodash": "^4.14.149",
    "@types/react": "^16.9.13",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.9.0",
    "@typescript-eslint/parser": "^2.9.0",
    "blue-tape": "^1.0.0",
    "d3": "^5.14.1",
    "del-cli": "^3.0.0",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "parcel-bundler": "^1.12.4",
    "prettier-standard": "^16.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rollup": "^1.27.6",
    "rollup-plugin-typescript": "^1.0.1",
    "standardx": "^5.0.0",
    "testem": "^3.0.1",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "bundle:test": "webpack --mode=development",
    "clean": "del '{src,demo,test}/**/*.{js,jsx,d.ts}'",
    "format": "prettier-standard '{demo,src,test,scripts}/**/*.{js,jsx,ts,tsx}'",
    "lint": "standardx '{demo,src,test,scripts}/**/*.{js,jsx,ts,tsx}' --fix",
    "demo": "parcel demo/index.html",
    "test": "npx testem ci --launch chrome"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test,scripts}/**/*.{js,jsx,ts,tsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": 0
    }
  },
  "standardx": {
    "env": [
      "browser"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ],
    "ignore": [
      "**/*.d.ts"
    ]
  },
  "peerDependencies": {
    "d3": "*"
  }
}
